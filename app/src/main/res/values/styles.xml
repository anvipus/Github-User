<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="FormText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/medium_grey</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/medium_grey</item>
        <item name="colorControlNormal">@color/medium_grey</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/medium_grey</item>
        <item name="android:textColorLink">@color/medium_grey</item>
        <item name="colorControlHighlight">@color/medium_grey</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="colorControlHighlight">@color/light_black</item>
    </style>

    <style name="NavigationDrawerStyleLowScreen">
        <item name="android:textSize">14sp</item>
        <item name="colorControlHighlight">@color/light_black</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTabTextSmallScreen" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/colorAccent</item> <!-- activated color change as you wish -->
        <item name="android:textColor">@color/white</item> <!-- checkbox text color -->
    </style>

    <style name="SwitchTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Color1SwitchStyle" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>

    <style name="TabLayoutStyleSmallScreen" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
